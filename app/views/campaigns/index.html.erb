<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-6">
        <h1 class="page-header">Campaigns</h1>
      </div>
      <div class="col-lg-6 page-header">
        <%= link_to "Create Campaign", new_campaign_path, class: 'btn btn-primary pull-right', style: 'display: inline-block;'%>
      <div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          List Campaigns
        </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Title</th>
                <th>Start At</th>
                <th>Target Audience</th>
              </tr>
            </thead>
            <tbody>
              <% @campaigns.each do |campaign| %>
                <tr class="gradeA">
                  <td><%= campaign.name %></td>
                  <td><%= campaign.send_at %></td>
                  <td><%= campaign.campaign_groups.map{ |group| group.group.name } %></td>
                  <td>
                    <% unless campaign.status? %>
                      <%= link_to "Start Campaign", start_campaign_campaign_path(campaign), class: 'btn btn-primary', method: :post %>
                    <% else %>
                      <%= link_to "View Campaign", campaign_campaign_reports_path(campaign), class: 'btn btn-primary', method: :get %>
                    <% end %>  
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>  
        </div>
      </div>  
    </div>
  </div>
</div>