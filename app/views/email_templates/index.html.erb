<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-6">
        <h1 class="page-header">Groups</h1>
      </div>
      <div class="col-lg-6 page-header">
        <%= link_to "New Template", new_email_template_path, class: 'btn btn-primary pull-right', style: 'display: inline-block;'%>
      <div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          List Templates
        </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr class="info">
                <td>Subject</td>
                <td>Link</td>
                <td></td>
              </tr>
            </thead>
            <tbody>
              <% @templates.each do |template| %>
                <tr class="gradeA">
                  <td>
                    <%= template.subject %>
                  </td>
                  <td>
                    <%= template.action_url %>
                  </td>
              
                  <td>
                    <%= link_to edit_email_template_path(template) do %>
                      <i class="fa fa-edit"></i>edit
                    <% end %>
                    <%= link_to email_templates_path(template) do %>
                      <i class="fa fa-eye"></i>show
                    <% end %>

                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>  
        </div>
      </div>  
    </div>
  </div>
</div>