<div class="admin-main-con">
  <div class="col-sm-12">
    <div class="admin_content_body">
      <div class="col-sm-12 col-xs-12">
        <%= link_to 'Add Group', new_group_path, class: 'btn btn-primary', style: 'margin-bottom: 10px;' %>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-sm-12">
          <table class="table  table-striped table-data-con">
            <thead>
            <tr class="info">
              <td>Name</td>
              <td>Members Count</td>
              <td></td>
            </tr>
            </thead>
            <tbody>
              <% @groups.each do |group| %>
                <tr>
                  <td>
                    <%= group.name %>
                  </td>
                  <td>
                    <%= group.members.count %>
                  </td>
                  <td>
                    <%= link_to edit_group_path(group) do %>
                        Edit
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>