<div class="admin-main-con">
  <div class="col-sm-12">
    <div class="admin_content_body">
      <div class="col-sm-12 col-xs-12">
        <%#= link_to 'Add News', new_post_path, class: 'btn btn-primary', style: 'margin-bottom: 10px;' %>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-sm-12">
          <table class="table  table-striped table-data-con">
            <thead>
            <tr class="info">
              <td>Name</td>
              <td>Email</td>
              <td></td>
            </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                      <td>
                        <%= user.name %>
                      </td>
                      <td>
                        <%= user.email %>
                      </td>
                      <td>
                        <%#= link_to edit_user_path(user) do %>
                           <!--  Edit -->
                        <%# end %>
                      </td>
                    </tr>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>