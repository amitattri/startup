<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-6">
        <h1 class="page-header">Campaign Report</h1>
      </div>
      <div class="col-lg-6">
        <%#= link_to "Create Campaign", new_campaign_path, class: 'btn btn-primary pull-right', style: 'display: inline-block;'%>
      <div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
           Campaign Report - <%= @reports.first.campaign.name %>
        </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Name</th>
                <th>Template</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @reports.each do |report| %>
                <tr class="gradeA">
                  <td><%= report.member.name %></td>
                  <td><%= report.campaign.email_template.subject %></td>
                  <td><%= report.status? %></td>
                </tr>
              <% end %>
            </tbody>
          </table>  
        </div>
      </div>  
    </div>
  </div>
</div>