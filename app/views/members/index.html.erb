<div class="admin-main-con">
  <div class="col-sm-12">
    <div class="admin_content_body">
      <div class="col-sm-12 col-xs-12">
        <%= link_to 'Add menber', new_member_path, class: 'btn btn-primary', style: 'margin-bottom: 10px;' %>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-sm-12">
          <table class="table  table-striped table-data-con">
            <thead>
              <tr class="info">
                <td>Name</td>
                <td>Group name</td>
                <td></td>
              </tr>
            </thead>
            <tbody>
              <% @members.each do |member| %>
                  <tr>
                    <td>
                      <%= member.email %>
                    </td>
                    <td>
                      <%= member.group.name %>
                    </td>
                
                    <td>
                      <%= link_to edit_member_path(member) do %>
                          Edit
                      <% end %>
                    </td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>