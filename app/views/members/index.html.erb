<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-6">
        <h1 class="page-header">Members</h1>
      </div>
      <div class="col-lg-6 page-header">
        <%= link_to "Upload File", upload_file_members_path, class: 'btn btn-primary pull-right', style: 'display: inline-block;'%>
        <%= link_to "New Member", new_member_path, class: 'btn btn-primary pull-right', style: 'display: inline-block;'%>
      <div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          List Members
        </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Group Name</th>
                <!-- <th>CSS grade</th> -->
              </tr>
            </thead>
            <tbody>
              <% @members.each do |member| %>
                <tr class="gradeA">
                    <td><%= member.name %></td>
                    <td><%= member.email %></td>
                    <td><%= member.phone %></td>
                     <td><%= member.group.name %></td>
          
                </tr>
              <% end %>
            </tbody>
          </table>  
        </div>
      </div>  
    </div>
  </div>
</div>